<div id="popup_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <%= form_for([:admin, @dashboard_widget], url: admin_dashboard_dashboard_widget_path(@dashboard, @widget), :html => {:id=>"form_dashboard_widget", :class=>"mb-0 form-horizontal", :role => "form", :method =>  :patch, :remote=>true}) do |f| %>
        Jira URL:<%= f.text_field :jira_url %><br>
        Jira View ID:<%= f.text_field :jira_view_id %><br>
        Jira Name:<%= f.text_field :jira_name %><br>
        Jira Password:<%= f.text_field :jira_password %><br>
        <%= f.submit "Submit" %><br>
        <% end %>
      </div>

    </div>
  </div>
</div>
